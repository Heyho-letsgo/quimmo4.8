<%= simple_form_for(@travailleur) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.association :principal_groupe %>
    <%= f.association :sous_groupe %>
    <%= f.association :agence %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
